<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/budget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget Overview"
            android:textSize="24sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp"/>

        <!-- Time Range Selector -->
        <Spinner
            android:id="@+id/time_range_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Bar Chart -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget vs. Spending"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"/>

        <!-- Pie Chart -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spending Distribution"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"/>

        <!-- Budget Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_summary_box">

            <TextView
                android:id="@+id/total_budget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Budget: $1000"
                android:textSize="16sp"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/remaining_budget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining Budget: $600"
                android:textSize="16sp"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/overspending_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overspending: $0"
                android:textSize="16sp"
                android:textColor="@color/text_color"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>